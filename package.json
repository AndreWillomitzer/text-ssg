		"figlet": "^1.5.2",
		"highlight.js": "^11.3.1",
		"markdown-it": "^12.2.0",
		"yargs": "^17.1.1"
	},
	"devDependencies": {
		"eslint": "^7.32.0",
		"eslint-config-airbnb": "^18.2.1",

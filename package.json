{
	"name": "text-ssg",
	"version": "0.1.0",
	"description": "This is a Static Site Generator CLI that convert .txt and .md files into .html files",
	"main": "src/index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"prettier": "prettier --write \"./**/*.{md,json,html,js}\"",
